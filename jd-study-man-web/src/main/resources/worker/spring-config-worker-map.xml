<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">
    <!--单机worker任务配置Map-->
    <bean id="singleSchedulerMap" class="java.util.HashMap">
        <constructor-arg>
            <map>
                <!-- 奖励京豆worker -->
                <entry key="awardJingBeanScheduler" value-ref="awardJingBeanScheduler"/>
            </map>
        </constructor-arg>
    </bean>

    <bean id="workerService" class="com.jd.rd.game.service.task.impl.WorkerServiceImpl">
        <property name="singleSchedulerMap" ref="singleSchedulerMap"/>
    </bean>
</beans>
